if BT

menu "Laird Connectivity Zephyr BLE Common Components"
	 default y

config LCZ_BT
	bool "Enable Bluetooth utility functions"

config LCZ_AD_FIND
	bool "Enable advertisement parser"

config LCZ_BT_SCAN
	bool "Enable scan module for multi-user system"

config BT_SCAN_MAX_USERS
	int "Maximum number of users of the scan module"
	depends on LCZ_BT_SCAN
	range 1 32
	default 2

config BT_SCAN_VERBOSE_ADV_HANDLER
	bool "Enable Verbose logging of advertisements"
	depends on LCZ_BT_SCAN

config LCZ_SENSOR_ADV_FORMAT
	bool "Enable BLE Sensor Advertisement Format Module"
	depends on LCZ_BT

endmenu

endif